mse version: 2.0.0
short name: GW
full name: GundamWarCCG
installer group: GCG/game files
icon: card-back.png
position hint: 01

version: 2023-12-04


####################### Card Function Definitions

init script:
	defaultcolor :=	{ case card.corps of
			"Earth Federation": "Blue"
			"A.E.U.G.": "Blue"
			"Principality of Zeon": "Green"
			"Titans": "Black"
			"Zanscale Empire": "Black"
			"Neo Zeon": "Red"
			"Crossbone Vanguard": "Red"
			"Turn A": "Brown"
			"Gundam X": "Brown"
			"Wing Gundam": "White"
			"Gundam Seed": "White"
			else: "Purple"
	}
	faction_code :=	{ case card.corps of
			"Earth Federation": "E"
			"A.E.U.G.": "E" ##???
			"Principality of Zeon": "Z"
			"Titans": "T"
			"Zanscale Empire": "ZA" 
			"Neo Zeon": "N"
			"Crossbone Vanguard":"C"
			"Turn A": "A"
			"Gundam X": "X"
			"Wing Gundam": "W"
			"Gundam Seed": "S"
			else: "P"
	}
	type_code := { case card.type of
			"Unit": "U-",
			"Character": "CH-",
			"Command": "C-",
			"Operation": "O-",
			"Generation": "G-",
			else: "X-"
	}
	color_code := { case card.color of 
			"Blue": "A",
			"Green": "B",
			"Black": "C",
			"Red": "D",
			"Brown": "E",
			"White": "F",
			"Purple": "G",
			else: "X"
	}
	is_special	:= { contains(card.rarity, match: "Special") }
	cardtyper	:= { if is_special() then "SP-" else type_code() + faction_code() }

####################### Set Field Definitions

set field:
	type: text
	name: Set_Name
	identifying: true

set field:
	type: text
	name: Set_Code
	identifying: true


####################### Card Field Definitions

card field:
	type:			text
	name:			type_code
	script:			cardtyper()
	description:		Card type
	card list visible:	false
	editable:		false
	save value:		false

card field:
	type:			text
	name:			list_number
	description:		Card Number
	card list visible:	false

card field:
	type:			text
	name:			sort_number
	script:			card.type_code + card.list_number
	save value:		false
	identifying:		true
	card list visible:	true
	card list column:	1


