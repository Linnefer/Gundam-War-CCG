card field:
	type:			choice
	name:			faction_color
	editable:		false
	card list visible:	true
	card list column:	4
	choice:		Blue
	choice:		Green
	choice:		Black
	choice:		Red
	choice:		Brown
	choice:		White
	choice:		Purple
	script:		defaultcolor(card.corps)
	description:	The color of the card.

card field:
	type:			choice
	name:			type
	description:		The type and layout of the card.
	card list visible:	true
	card list column:	4
	script: 	if card.faction_color == "Purple" then "Generation" else value
	choice:	
		name:	Generation
		enabled: true
	choice:			
		name:	Unit
		enabled: {card.faction_color != "Purple"}
	choice:	
		name:	Character
		enabled: {card.faction_color != "Purple"}
	choice:	
		name:	Command
		enabled: {card.faction_color != "Purple"}
	choice:	
		name:	Operation
		enabled: {card.faction_color != "Purple"}

card field:
	type:		choice
	name:		set_on
	choice:
	choice:		(UNIT)

card field:
	type:		choice
	name:		rarity
	choice:		Common
	choice:		Uncommon
	choice:		Rare
	choice:		Special
	description:	The rarity of the card.

